import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
   
        Scanner sc = new Scanner(System.in);
        long n = sc.nextLong();
        if (n <= 1) {
            return;
        }
        
        if(n%2==0){
            System.out.println(2);
            return;}
        
        for(long i=3;i*i<=n;i++){
            if(n%i==0){
                System.out.println(i);
                return; }}
        System.out.println(n);
            
       
        
    }
}
